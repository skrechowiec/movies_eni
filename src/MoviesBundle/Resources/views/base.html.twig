<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ asset('bootstrap-3.3.7-dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <title>{% block title %}Movies{% endblock %}</title>
    {% block script %}{% endblock %}
</head>
<body>
<div class="container">
    <header>
        <nav>
            <ul class="nav nav-pills">
                <li><a href="{{ path('movies_homepage') }}">Accueil</a></li>
                <li><a href="{{ path('AdminMovies') }}">Gestion des films</a></li>
                <li><a href="{{ path('CreatedMovies') }}" >nouveau film</a></li>
                <li><a href="{{ path('Review') }}" >les critiques</a></li>
            </ul>
        </nav>
    </header>
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}
    {% block content %}{% endblock %}
    <footer>

    </footer>
</div>
</body>
</html>